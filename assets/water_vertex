precision mediump float;
uniform mat4 uMVPMatrix;
uniform vec3 lightPos;
uniform float time;
uniform float xMult;
uniform float yMult;
uniform float mag;

attribute vec4 v_Position;

varying vec3 p_normal;

void main() {
	p_color = v_Color;
	p_normal = vec3(v_Normal);
	vec4 v = v_Position;
    v.y = v.y + mag * sin(time + xMult*v.x + yMult*v.y);
	p_dist = lightPos - vec3(v);
	gl_Position = uMVPMatrix * v;
}